{
  "manifest_version": 3,
  "name": "AI4Chat",
  "version": "1.0",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "webNavigation",
     "scripting",
     "activeTab", 
     "alarms"
     

  ],
  "host_permissions": [
    "https://app.ai4chat.co/*",
    "http://localhost:3000/*",
    "http://*/*",
    "https://*/*"
    
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
   "commands": {
    "open_movale_popup": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Open the extension popup"
    }
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

  
  
  
  